<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Courses.CoursesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment3"
            android:name="kireev.ftshw.project.Courses.GradesFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="25" />

        <fragment
            android:id="@+id/fragment2"
            android:name="kireev.ftshw.project.Courses.RatingFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="70" />

        <fragment
            android:id="@+id/fragment"
            android:name="kireev.ftshw.project.Courses.FinishedCoursesFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="35"/>

    </LinearLayout>

</ScrollView>