<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivActiveEventImage"
        android:layout_width="104dp"
        android:layout_height="150dp"
        android:src="@color/colorAcceptedStatus"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvActiveEventType"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_background"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.02"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:padding="4dp"
        android:text="КУРСЫ ДЛЯ ШКОЛЬНИКОВ"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/tvActiveEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:text="НОЯБ 2018 Г. "
        android:textColor="#9299a2"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivActiveEventImage" />

    <TextView
        android:id="@+id/tvActiveEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:text="Осенние стажировки аооааттотоа"
        android:maxWidth="100dp"
        android:minLines="2"
        android:maxLines="3"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvActiveEventDate" />

</android.support.constraint.ConstraintLayout>