<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivArchiveEventImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/colorAcceptedStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArchiveEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:text="Школьникам"
        android:textColor="#9299a2"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/ivArchiveEventImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArchiveEventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:maxLines="5"
        android:text="Интернет-олимпиада мехмата Интернет-олимпиада"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ivArchiveEventImage"
        app:layout_constraintTop_toBottomOf="@id/tvArchiveEventType" />

</android.support.constraint.ConstraintLayout>