<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    tools:context=".Courses.GradesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/titleGradesConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="gradesButtonClick"
            android:padding="8dp">

            <TextView
                android:id="@+id/titleGrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_grades_fragment"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detailsGrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_grades_fragment"
                android:textColor="#2196F3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <view
                    android:id="@+id/viewAvatarOne"
                    class="kireev.ftshw.project.InitialsRoundView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    custom:initials="Vladislav Kireev"
                    custom:roundColor="#FF7952"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vladislav Kireev"
                    android:maxLines="2"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewAvatarOne"/>

                <TextView
                    android:id="@+id/pointsBadgeOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge"
                    android:gravity="center"
                    android:text="111"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/viewAvatarOne"
                    app:layout_constraintTop_toTopOf="@id/viewAvatarOne" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <view
                    android:id="@+id/viewAvatarTwo"
                    class="kireev.ftshw.project.InitialsRoundView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    custom:initials="Jonathan Doe"
                    custom:roundColor="#FABC6E"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Jonathan Davis"
                    android:maxLines="2"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewAvatarTwo"/>

                <TextView
                    android:id="@+id/pointsBadgeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge"
                    android:gravity="center"
                    android:text="222"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/viewAvatarTwo"
                    app:layout_constraintTop_toTopOf="@id/viewAvatarTwo" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <view
                    android:id="@+id/viewAvatarThree"
                    class="kireev.ftshw.project.InitialsRoundView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    custom:initials="Chivas Regal"
                    custom:roundColor="#68B16B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Johnny Appleseed"
                    android:maxLines="2"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewAvatarThree"/>

                <TextView
                    android:id="@+id/pointsBadgeThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge"
                    android:gravity="center"
                    android:text="333"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/viewAvatarThree"
                    app:layout_constraintTop_toTopOf="@id/viewAvatarThree" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>